# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
max_line_length = 100
indent_size = 4

[*.js]
max_line_length = 100
indent_size = 4
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.md]
max_line_length = 100
trim_trailing_whitespace = false

